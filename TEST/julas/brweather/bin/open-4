"--imagem"*"=C3") echo $C3
;;
"--imagem"*"=C4") echo $C4
;;
"--option=C3T") echo $C3T
;;
"--option=C3I") echo $C3I
;;
"--option=C4T") echo $C4T
;;
"--option=C4I") echo $C4I
;;
"--option"*) echo "Opção inválida.
Experimente --help para mais informações."
;;
esac
