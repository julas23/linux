"--option=C6I") echo $C6I
;;
"--option=C7T") echo $C7T
;;
"--option=C7I") echo $C7I
;;
"--imagem"*"=C5") echo $C5
;;
"--imagem"*"=C6") echo $C6
;;
"--imagem"*"=C7") echo $C7
;;
"--option"*) echo "Opção inválida.
Experimente --help para mais informações."
;;
esac
