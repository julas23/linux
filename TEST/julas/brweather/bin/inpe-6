case $1 in
"--imagem"*"=C5") echo $C5
;;
"--imagem"*"=C6") echo $C6
;;
"--imagem"*"=C7") echo $C7
;;
"--option=C5T") echo $C5T
;;
"--option=C5I") echo $C5I
;;
"--option=C6T") echo $C6T
;;
"--option=C6I") echo $C6I
;;
"--option=C7T") echo $C7T
;;
"--option=C7I") echo $C7I
;;
"--option"* ) echo "Opção inválida.
Experimente --help para mais informações."
;;
esac
