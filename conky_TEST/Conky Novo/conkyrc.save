# Default Fonts
use_xft yes
xftfont Liberation Sans:size=8
xftalpha 0.1
override_utf8_locale yes

# Performance Settings
update_interval 0.5
total_run_times 0
double_buffer yes
no_buffers yes
net_avg_samples 2
text_buffer_size 4096

# Window Settings
own_window yes
own_window_class Conky
own_window_type override
own_window_transparent yes
own_window_argb_visual no
#own_window_colour 123456
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

# Window border
draw_borders no
draw_outline no

# Default Color
default_color E0DFDE
format_human_readable

# Color Title.
color0 FAFAFA #Titulo DD3A21
color1 FF3030 #Vermelho
color2 FF7F00 #laranja
color3 FFD700 #ouro
color4 FFFF00 #amarelo
color5 EEE8AA #creme
color6 FFFFFF #branco
color7 009ACD #azul
color8 B0E2FF #azulclaro
color9 00FF7F #verde

# Size and position
alignment top_right
minimum_size 182 768
maximum_width 182
gap_x 5
gap_y 5

